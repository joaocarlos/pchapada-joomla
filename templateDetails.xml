<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install PUBLIC "-//Joomla! 1.6//DTD template 1.0//EN" "http://www.joomla.org/xml/dtd/1.6/template-install.dtd">
<extension version="1.8.2" type="template" client="site">
	<name>Portal Da Chapada v1.8.2</name>
	<creationDate>06 December 2011</creationDate>
	<author>João Carlos Nunes Bittencourt</author>
	<authorEmail>joaocarlos@ecomp.uefs.br</authorEmail>
	<authorUrl>http://portaldachapada.uefs.br</authorUrl>
	<copyright>Copyright (C) 2005 - 2011 Open Source Matters, Inc. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<version>1.8.2</version>
	<description>Template oficial do Portal da Chapada Diamantina</description>

	<files>
		<folder>css</folder>
		<folder>html</folder>
		<folder>images</folder>
		<folder>js</folder>
		<folder>language</folder>
		<filename>index.html</filename>
		<filename>index.php</filename>
		<filename>templateDetails.xml</filename>
		<filename>template_preview.png</filename>
		<filename>template_thumbnail.png</filename>
		<filename>favicon.ico</filename>
		<filename>error.php</filename>
		<filename>component.php</filename>
	</files>

	<positions>
		<position>debug</position>
		<position>breadcrumb</position>
		<position>banner</position>
		<position>topmenu</position>
		<position>mainmenu</position>
		<position>content</position>
		<position>about</position>
		<position>newsofportal</position>
		<position>joinus</position>
		<position>newsfeed</position>
		<position>footer</position>
		<position>search</position>
		<position>popular</position>
		<position>tags</position>
		<position>related</position>
	</positions>

	<!-- 	For core templates, we also install/uninstall the language files in the core language folders.
	-->
	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.tpl_pchapada.ini</language>
		<language tag="en-GB">en-GB/en-GB.tpl_pchapada.sys.ini</language>
		<language tag="pt-BR">pt-BR/pt-BR.tpl_pchapada.ini</language>
		<language tag="pt-BR">pt-BR/pt-BR.tpl_pchapada.sys.ini</language>		
	</languages>

	<config>
		<fields name="params">		
			<fieldset  name="advanced">	
				<field name="html5" type="list" default="0"
					label="Versão do HTML"
					description="Escolha HTML5 para obter o visual perfeito do Portal da Chapada"
					filter="int"
				>
					<option value="0">XHTML</option>
					<option value="1">HTML5</option>
				</field>
			</fieldset>
		</fields>
	</config>
	
</extension>
